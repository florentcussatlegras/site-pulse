<header
	class="w-full bg-content shadow p-4 flex justify-between items-center" {{ stimulus_controller('sidebar') }}>
	<!-- Marque à gauche -->
	{% include "pages/partials/_brand.html.twig" %}

	<!-- Hamburger à droite (mobile) -->
    <div class="flex flex-row md:hidden">
        {% include "components/ui/theme_switch.html.twig" %}
        <button class="pl-2 rounded-md focus:outline-none" data-action="click->sidebar#toggle">
            <svg class="h-6 w-6 text-icon" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>
    </div>

	<!-- Nav normale (desktop) -->
	<nav class="hidden md:flex items-center gap-4">
        {% include "components/ui/theme_switch.html.twig" %}
		{% if app.user %}
			<div {{ stimulus_controller('dropdown') }} class="relative inline-block text-left">
				<div data-action="click->dropdown#toggle" class="w-10 h-10 flex items-center justify-center rounded-full bg-indigo-100 text-indigo-600 font-bold text-xl cursor-pointer select-none">
					{{ app.user.email|slice(0,1)|upper }}
				</div>
				<div data-dropdown-target="menu" class="origin-top-right absolute right-0 mt-2 w-40 rounded-xl shadow-lg bg-content hidden z-10">
					<div class="py-1 flex flex-col">
						<a href="{{ path('app_profile_index') }}" class="text-primary flex px-4 py-2 text-sm items-center gap-2 rounded-t-xl">
							Mon profil
						</a>
						<a href="{{ path('app_logout') }}" class="flex px-4 py-2 text-sm text-red-600 hover:bg-red-50 items-center gap-2 rounded-b-xl">
							Déconnexion
						</a>
					</div>
				</div>
			</div>
		{% else %}
			<a href="{{ path('app_login') }}" class="bg-indigo-100 text-indigo-600 border-none px-4 py-2 rounded-xl transition duration-300">Connexion</a>
			<a href="{{ path('app_register') }}" class="inline-flex items-center gap-2 rounded-xl px-4 py-2 font-semibold transition focus:outline-none focus:ring-2 bg-indigo-600 text-white hover:bg-indigo-700 focus:ring-primary-500 ">S'inscrire</a>
		{% endif %}
	</nav>

	<!-- Sidebar mobile -->
	<div data-sidebar-target="panel" class="fixed inset-y-0 left-0 w-full bg-content shadow-lg transform -translate-x-full transition-transform duration-300 z-50 md:hidden">
		<div class="p-4 flex justify-between items-center">
			<span class="font-bold text-lg">{% include "pages/partials/_brand.html.twig" %}</span>
			<button data-action="click->sidebar#toggle" class="pl-2 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
				<svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
				</svg>
			</button>
		</div>

		<div class="flex flex-col mt-4 gap-2 px-4">
			{% if app.user %}
				<a href="{{ path('app_profile_index') }}" class="flex items-center gap-2 px-4 py-2 rounded text-primary">
					Mon profil
				</a>
				<a href="{{ path('app_logout') }}" class="flex items-center gap-2 px-4 py-2 rounded text-red-600 hover:bg-red-50">
					Déconnexion
				</a>
			{% else %}
				<a href="{{ path('app_login') }}" class="px-4 py-2 rounded bg-indigo-100 hover:bg-indigo-200 text-indigo-700 flex items-center justify-center">Connexion</a>
				<a href="{{ path('app_register') }}" class="px-4 py-2 rounded bg-indigo-600 hover:bg-indigo-700 text-white flex items-center justify-center">S'inscrire</a>
			{% endif %}
		</div>
	</div>

	<!-- Overlay -->
	<div data-sidebar-target="overlay" class="fixed inset-0 bg-black bg-opacity-30 hidden z-40 md:hidden" data-action="click->sidebar#toggle"></div>
</header>
