{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<section class="w-full min-h-screen max-w-4xl flex flex-col items-center bg-content px-4">

    <!-- CTA nouveau audit -->
    <div class="flex justify-center mb-8 ml-auto">
        <a href="{{ path('app_home') }}" class="inline-flex items-center gap-2 rounded-xl px-6 py-3 font-semibold transition focus:outline-none focus:ring-2 bg-indigo-600 text-white hover:bg-indigo-700 focus:ring-indigo-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nouvel audit
        </a>
    </div>
    
    <div class="w-full flex flex-col gap-8 mt-8">
        <!-- Section utilisateur -->
        <div class="bg-color-card rounded-2xl shadow-soft flex flex-col sm:flex-row items-center gap-6 p-8">
            <!-- Avatar -->
            <div class="w-20 h-20 rounded-full bg-indigo-600 flex items-center justify-center text-white text-4xl font-bold">
                {{ app.user.email|slice(0,1)|upper }}
            </div>
            
            <!-- Infos -->
            <div class="flex-1">
                <h2 class="text-xl font-bold text-primary flex items-center gap-2">
                    Bonjour, {{ app.user.email }}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                </h2>
                <div class="flex items-center mt-2 text-sm text-neutral-500 gap-2">
                    <span>
                        Membre depuis {{ app.user.createdAt|date('F Y') }}
                    </span>

                    <a
                        href="{{ path('app_account_settings') }}"
                        class="inline-flex items-center justify-center w-8 h-8 rounded-full
                            hover:bg-neutral-100 transition"
                        aria-label="Paramètres du compte"
                        title="Paramètres du compte"
                    >   
                        <svg class="w-6 h-6 stroke-current text-primary" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" stroke-width="3" stroke="#000000" fill="none"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M45,14.67l-2.76,2a1,1,0,0,1-1,.11L37.65,15.3a1,1,0,0,1-.61-.76l-.66-3.77a1,1,0,0,0-1-.84H30.52a1,1,0,0,0-1,.77l-.93,3.72a1,1,0,0,1-.53.65l-3.3,1.66a1,1,0,0,1-1-.08l-3-2.13a1,1,0,0,0-1.31.12l-3.65,3.74a1,1,0,0,0-.13,1.26l1.87,2.88a1,1,0,0,1,.1.89L16.34,27a1,1,0,0,1-.68.63l-3.85,1.06a1,1,0,0,0-.74,1v4.74a1,1,0,0,0,.8,1l3.9.8a1,1,0,0,1,.72.57l1.42,3.15a1,1,0,0,1-.05.92l-2.13,3.63a1,1,0,0,0,.17,1.24L19.32,49a1,1,0,0,0,1.29.09L23.49,47a1,1,0,0,1,1-.1l3.74,1.67a1,1,0,0,1,.59.75l.66,3.79a1,1,0,0,0,1,.84h4.89a1,1,0,0,0,1-.86l.58-4a1,1,0,0,1,.58-.77l3.58-1.62a1,1,0,0,1,1,.09l3.14,2.12a1,1,0,0,0,1.3-.15L50,45.06a1,1,0,0,0,.09-1.27l-2.08-3a1,1,0,0,1-.09-1l1.48-3.43a1,1,0,0,1,.71-.59L53.77,35a1,1,0,0,0,.8-1V29.42a1,1,0,0,0-.8-1l-3.72-.78a1,1,0,0,1-.73-.62l-1.45-3.65a1,1,0,0,1,.11-.94l2.15-3.14A1,1,0,0,0,50,18l-3.71-3.25A1,1,0,0,0,45,14.67Z"></path><circle cx="32.82" cy="31.94" r="9.94"></circle></g></svg>
                    </a>
                </div>
            </div>

            <!-- Action -->
            <div>
                <a href="{{ path('app_logout') }}" class="inline-flex items-center gap-2 rounded-xl px-4 py-2 font-semibold transition focus:outline-none focus:ring-2 bg-red-600 text-white hover:bg-red-700 focus:ring-red-500">
                    {# <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7" />
                    </svg> #}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h6a2 2 0 012 2v1"></path>
                    </svg>
                    Déconnexion
                </a>
            </div>
        </div>

        <!-- Historique des audits -->
        <div class="bg-content rounded-2xl shadow-soft w-full">
            <h3 class="text-lg font-bold mb-4 flex items-center gap-2 text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-6h13" />
                </svg>
                Historique des audits
            </h3>

            {% if audits|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {% for audit in audits %}
                        <div class="bg-color-card rounded-xl p-4 flex flex-col gap-2 hover:shadow-md transition">
                            <span class="text-sm text-primary">{{ audit.createdAt|date('d/m/Y H:i') }}</span>
                            <h4 class="font-semibold text-primary flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l4-4m0 0l-4-4m4 4H6" />
                                </svg>
                                {{ audit.url }}
                            </h4>
                            <div class="flex flex-wrap gap-2 mt-2">
                                <span class="flex items-center gap-1 px-2 py-1 bg-indigo-100 text-indigo-800 rounded-full text-xs">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3" />
                                    </svg>
                                    Perf: {{ audit.performance }}%
                                </span>
                                <span class="flex items-center gap-1 px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    SEO: {{ audit.seo }}%
                                </span>
                                <span class="flex items-center gap-1 px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" />
                                    </svg>
                                    Access: {{ audit.accessibility }}%
                                </span>
                                <span class="flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-800 rounded-full text-xs">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    BP: {{ audit.bestPractices }}%
                                </span>
                            </div>
                            <a href="{{ path('audit_report', {'id': audit.id}) }}" class="text-indigo-600 hover:underline mt-2 text-sm">Voir le rapport détaillé</a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-neutral-500">Vous n’avez encore aucun audit.</p>
            {% endif %}
        </div>

    </div>
</section>
{% endblock %}
