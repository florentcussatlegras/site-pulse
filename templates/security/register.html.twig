{# templates/security/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    {% include 'components/ui/card.html.twig' with {
        content: '
            <h1 class="text-3xl font-bold mb-4  text-primary">Créez votre compte</h1>

            ' ~ include("pages/partials/_alert.html.twig") ~ '

            <form method="POST" class="flex flex-col gap-4">
                <label class="flex flex-col text-sm font-medium text-primary">
                    Email :
                    <input type="email" name="email" required class="mt-1 rounded-xl border border-color-input
                               bg-color-input
                               text-primary p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 h-12">
                </label>

                <label class="flex flex-col text-sm font-medium text-primary">
                    Mot de passe :
                    <input type="password" name="password" required class="mt-1 rounded-xl border border-color-input
                               bg-color-input
                               text-primary p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 h-12">
                </label>

                ' ~ include("components/ui/button.html.twig", {
                    label: "S’inscrire",
                    type: "submit",
                    variant: "primary",
                    class: "mt-2 w-full flex justify-center"
                }) ~ '
            </form>

            <p class="mt-4 text-sm text-secondary">
                Déjà un compte ? <a href="' ~ path("app_login") ~ '" class="text-indigo-600 dark:text-indigo-400 hover:underline">Connectez-vous</a>
            </p>
        ',
        class: 'max-w-xl'
    } %}

{% endblock %}
